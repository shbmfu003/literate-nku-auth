
extends layout

block content
  .container
    .col-xs-4.col-md-offset-2
      .panel.panel-default.panel-info.Profile
        .panel-heading  My Profile 
          .form-horizontal
            form(method='POST', action='/users/profile')
              .form-group
                label.col-sm-2.control-label Name
                .col-sm-4
                  input.form-control(type='text', name='name')
              .form-group
                label.col-sm-2.control-label Email
                .col-sm-4
                  input.form-control(type='text', name='email' readonly)
              .form-group
                .col-sm-offset-2.col-sm-10
                  button.btn.btn-primary(ng-click='updateMe()') Update
