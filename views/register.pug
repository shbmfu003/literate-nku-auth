extends layout

block content
  h1 Register
  form(method='POST', action='/users/register')
    #form-group
      label First Name:
      input.form-control(name='firstName', type='text')
    #form-group
      label Last Name:
      input.form-control(name='lastName', type='text')
    #form-group
      label Email:
      input.form-control(name='email', type='email')
    #form-group
      label Username:
      input.form-control(name='username', type='text')
    #form-group
      label Password:
      input.form-control(name='password', type='password')
    #form-group
      label confirmPassword:
      input.form-control(name='confirmPassword', type='password')
    br
    input.btn.btn-primary(type='submit', value='Register')
